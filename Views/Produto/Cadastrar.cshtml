@model Produto
@{
    ViewData["Title"] = "Cadastrar Produto";
}

<h1 class="display-4">Cadastrar Produto</h1>

<form asp-controller="Produto" asp-action="Salvar" class="form-horizontal" role="form">
    <div class="form-group">
        <label for="exampleFormControlInput1">Nome</label>
        <input asp-for="Nome" type="text" class="form-control" placeholder="Digite o nome do produto">
    </div>

    <div class="form-group">
        <label for="exampleFormControlInput1">Descricao</label>
        <input asp-for="Descricao" type="text" class="form-control" placeholder="Digite a descricao do produto">
    </div>

    <div class="form-group">
        <label for="exampleFormControlInput1">Preço de Custo</label>
        <input asp-for="Custo" type="text" class="form-control" placeholder="Ex: 50.00">
    </div>

    <div class="form-group">
        <label for="exampleFormControlInput1">Quantidade</label>
        <input asp-for="Quantidade" type="text" class="form-control" placeholder="Ex: 20">
    </div>


    <div class="form-group">
        <label for="exampleFormControlSelect1">Categoria</label>
        <select asp-for="Categoria" type="text" class="form-control">
            <option>A</option>
            <option>B</option>
        </select>
    </div>

    <input type="submit" class="btn btn-info" value="Salvar" />
</form>
